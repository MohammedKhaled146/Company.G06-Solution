@model RoleViewModel
@{
    ViewData["Title"] = "Update";
}

<h1>Edit Role</h1>
<br/>
<br/>
<form asp-action="Edit" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="alert alert-danger"></div>
    <partial name="PartialViews/EditCreateRolePartialView" model="Model"></partial>

   
 
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="AddOrRemoveUsers"asp-route-roleId = "@Model.Id"  class="btn btn-success">Add Or Remove User</a>

   
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

