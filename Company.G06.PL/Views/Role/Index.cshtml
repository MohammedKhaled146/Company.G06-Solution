@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<br />
<form asp-action="Index">

    <div class="row m-4">
        <div class="col-8">
            <input type="text" name="SearchInput" placeholder="Serch By Name" class="form-control" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn  btn-success" />
        </div>
    </div>
</form>


<a asp-controller ="Role"asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />

@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D => D.Id)</th>
                <th>@Html.DisplayNameFor(D => D.RoleName)</th>
     

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>

                    <td>@role.Id</td>
                    <td>@role.RoleName</td>
                   

                    <partial name="_ButtonPartialView" model="@role.Id"/>


                </tr>
            }
        </tbody>
    </table>


}

else
{
    <div class="mt-4 alert alert-danger">
        <h4>There is No Roles :(</h4>)
    </div>
}
